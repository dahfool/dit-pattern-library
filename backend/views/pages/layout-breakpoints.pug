extends ../layout/base.pug
include ../../../frontend/components/core/templates/mixins.pug
include ../../../frontend/components/TabSwitcher/templates/mixins.pug
block content
  h1.h1 Layouts and breakpoints

  section(id="section-breakpoints")
    h2.h2 Breakpoints
    p Breakpoint info goes here
    table.styleguide__table
      tr.styleguide__tr
        th.styleguide__th(scope='col') Breakpoint class
        th.styleguide__th(scope='col') From (px)
        th.styleguide__th(scope='col') To (px)
      tr.styleguide__tr
        td.styleguide__td mobile
        td.styleguide__td 0
        td.styleguide__td 767
      tr.styleguide__tr
        td.styleguide__td(scope='row') mobile-up
        td.styleguide__td 768
        td.styleguide__td 768+
      tr.styleguide__tr
        td.styleguide__td(scope='row') tablet
        td.styleguide__td 768
        td.styleguide__td 959
      tr.styleguide__tr
        td.styleguide__td(scope='row') desktop
        td.styleguide__td 960
        td.styleguide__td 1200+
    p The pattern library comes with mixins named after each breakpoint class (mobile, tablet, desktop) to help developers implement the breakpoints.
    h2.h2 Spacing

    p General speaking spacing follows GDS guidelines of multiples of 15px

    table.styleguide__table
      tr.styleguide__tr
        th.styleguide__th(scope='col') Breakpoint class
        th.styleguide__th(scope='col') Gutter (px)
      tr.styleguide__tr
        td.styleguide__td mobile
        td.styleguide__td 15px
      tr.styleguide__tr
        td.styleguide__td mobile-up
        td.styleguide__td 30px

  section(id="section-layout")
