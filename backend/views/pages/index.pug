mixin codeblock(lang, label, code)
  h3.h3 #{label}
  .tabswitcher
    nav.tabswitcher__nav
      a.tabswitcher__btn(data-tabswitcher-pane='example', title='click to view example') Example
      a.tabswitcher__btn(data-tabswitcher-pane='markup', title='click to view markup') Markup
    .tabswitcher__content
      .tabswitcher__pane.tabswitcher__example(data-tabswitcher-pane='example')
        div !{code}
      .tabswitcher__pane.tabswitcher__source(data-tabswitcher-pane='markup')
        pre
          code(class=`language-${lang}`)
            div| #{code}
doctype html
html
  head
    meta(charset='utf-8')/
    meta(http-equiv='x-ua-compatible' content='ie=edge')/
    meta(name='description' content='')/
    meta(name='viewport' content='width=device-width, initial-scale=1')/
    title EIG Styleguide
    link(rel="icon", type="image/png", href="images/favicon.ico")
    link(rel='apple-touch-icon' href='apple-touch-icon.png')/
    // Place favicon.ico in the root directory
    link(rel='stylesheet' href='styles/main.css')/
    link(rel='stylesheet' href='vendor/prism-twilight.css')/
  body
    script.
      document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled')
    include ../layout/header
    .outer-container(id="content")
      section
        h2.h2 Typography
        p Here are examples of typography used across the site
        // headers
        +codeblock('html', 'Level 1 header', `
        <h1 class="h1">This is a title (48px)</h1>
        `)

        +codeblock('html', 'Level 2 header', `
        <h2 class="h2">This is a subtitle (32px)</h2>
        `)

        +codeblock('html', 'Level 3 header', `
        <h3 class="h3">This is a small subtitle (24px)</h3>
        `)

        +codeblock('html', 'Level 4 header', `
        <h4 class="h4">This is a smaller subtitle (18px)</h4>
        `)

        +codeblock('html', 'Paragraph', `
        <p>This is normal text (16px).</p>
        `)

        +codeblock('html', 'Large paragraph', `
        <p class="font-large">This is large text (18px).</p>
        `)

        +codeblock('html', 'Small paragraph', `
        <p class="font-small">This is small text (15px).</p>
        `)

        +codeblock('html', 'Extra small paragraph', `
        <p class="font-xsmall">This is extra small text (14px).</p>
        `)

      section
        h2.h2 Links
        +codeblock('html', 'Hyperlinked text', `
        <a class="link" href="www.thisisalink.com">This is a web hyperlink</a>
        `)

      section
        h2.h2 Lists
        +codeblock('html', 'Unordered list', `
        <ul class="list push--bottom">
          <li class="list-item">which are the major online markets in overseas countries</li>
          <li class="list-item">if there is a suitable e-commerce website to sell your products</li>
