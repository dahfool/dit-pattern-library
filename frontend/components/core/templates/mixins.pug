//- mixins named using BEM syntax to main consistency with CSS naming conventions
mixin h1(text, attrs)
  h1.h1=text

mixin h2(text, attrs)
  h2.h2=text

mixin h3(text, attrs)
  h3.h3=text

mixin h4(text, attrs)
  //- @deprecated - removed in next minor version - v0.3
  h4.h4=text

mixin p(text, attrs)
  p=text

mixin p--no-margin-bottom(text, attrs)
  p.no-margin-bottom=text

mixin p--xsmall(text, attrs)
  //- @deprecated - removed in next minor version - v0.3
  p.font-xsmall=text

mixin p--small(text, attrs)
  p.font-small=text

mixin p--large(text, attrs)
  p.font-large=text

mixin p--lead(text, attrs)
  p.font-lead=text

mixin blockquote(text, attrs)
  blockquote.font-quote=text

mixin a(text, attrs)
  a.link(href='attrs[href]') This is a web hyperlink.

mixin button(text, attrs)
  -
    let aExtraClasses = ['button']
    let sExtraClasses = ''
    if (attrs.colour) {
      if (attrs.transparent) {
        aExtraClasses.push(`button-border`)
        aExtraClasses.push(`button-transparent-${attrs.colour}`)
      }
      else {
        aExtraClasses.push(`button-${attrs.colour}`)
      }

    }
    if (attrs.size) {
      aExtraClasses.push(`button-${attrs.size}`)
    }
    sExtraClasses = aExtraClasses.join(' ')
  button(href='attrs[href]', title='attrs[title]', class=''+sExtraClasses)=text
